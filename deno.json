{
    "compilerOptions": {},
    "importMap": "import_map.json",
    "tasks": {
        "serve": "deno run --allow-env --allow-net --allow-read --allow-write --allow-run src/main.ts",
        "bundle": "deno run --allow-run --allow-read --allow-write --allow-env scripts/bundle.js",
        "generate_validator": "deno run --allow-run --allow-read --allow-write scripts/generate_validator.js"
    },
    "lint": {
        "files": {
            "include": [],
            "exclude": []
        }
    },
    "fmt": {
        "files": {
            "include": [],
            "exclude": []
        },
        "options": {
            "useTabs": false,
            "lineWidth": 120,
            "indentWidth": 4,
            "singleQuote": false,
            "proseWrap": "preserve"
        }
    },
    "test": {
        "files": {
            "include": [],
            "exclude": []
        }
    },
    "generateValidator": [
        "src/common/types.ts"
    ],
    "bundle": {
        "sharedSourceDirs": {
            "./src/common": "./public/js/common"
        }
    }
}
